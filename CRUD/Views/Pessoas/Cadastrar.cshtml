@model CRUD.Models.Pessoa
@{
}
<br />
<h2>Cadastrar Pessoa</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Cadastrar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label">NOME</label>
                <span asp-validation-for="Nome" class="text-danger"></span>
                 <div class="col-lg-10">
                    <input type="text" name="Nome" class="form-control" value=""/>
                 </div>
            </div>
            <div class="form-group">
                <label asp-for="Cpf" class="control-label">CPF</label>
                <span asp-validation-for="Cpf" class="text-danger"></span>
                <div class="col-lg-10">
                    <input type="text" name="Cpf" maxlength="11" class="form-control" value=""/>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Endereco" class="control-label">ENDEREÇO</label>
                <span asp-validation-for="Endereco" class="text-danger"></span>
                <div class="col-lg-10">
                    <input type="text" name="Endereco" class="form-control" value=""/>
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary btn-sm" />
                <a class="btn btn-outline-primary btn-sm" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>
