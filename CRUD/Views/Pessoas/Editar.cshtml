@model CRUD.Models.Pessoa
@{
}
<br />
<h2>Editar</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group col-md-12">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger" asp-for="Nome"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control" maxlength="11" />
                <span asp-validation-for="Cpf" class="text-danger" asp-for="Cpf"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Endereco" class="control-label"></label>
                <input asp-for="Endereco" class="form-control" />
                <span asp-validation-for="Endereco" class="text-danger" asp-for="Endereco"></span>
            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="DDD_principal" class="control-label">DDD</label>
                    <input asp-for="DDD_principal" class="form-control" />
                    <span asp-validation-for="DDD_principal" class="text-danger" asp-for="DDD_principal"></span>
                </div>
                <div class="form-group col-md-8">
                    <label asp-for="Tel_principal" class="control-label">Telefone Principal</label>
                    <input asp-for="Tel_principal" class="form-control" />
                    <span asp-validation-for="Tel_principal" class="text-danger" asp-for="Tel_principal"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="DDD_secundario" class="control-label">DDD (opcional)</label>
                    <input asp-for="DDD_secundario" class="form-control" />
                    <span asp-validation-for="DDD_secundario" class="text-danger" asp-for="DDD_secundario"></span>
                </div>
                <div class="form-group col-md-8">
                    <label asp-for="Tel_secundario" class="control-label">Telefone Secundário (opcional)</label>
                    <input asp-for="Tel_secundario" class="form-control" />
                    <span asp-validation-for="Tel_secundario" class="text-danger" asp-for="Tel_secundario"></span>
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-success btn-sm" />
                <a class="btn btn-outline-primary btn-sm"  asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}