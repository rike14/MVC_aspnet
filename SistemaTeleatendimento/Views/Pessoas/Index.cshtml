@model IEnumerable<SistemaTeleatendimento.Models.Pessoa>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Pacientes</h1>

<p>
    <a class="btn btn-primary btn-sm" asp-action="Create">Cadastrar Novo Paciente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Nome Completo
            </th>
            <th>
               CPF
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a class="btn btn-info btn-sm"  asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a class="btn btn-danger btn-sm"  asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
